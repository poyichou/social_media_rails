<%= render partial: "print_message", locals: { messages: @messages }  %>

<%= form_for @user, :url => users_path do |f| %>
  <%=f.label :name, "User name" %>
  <%=f.text_field :name %>

  <%=f.label :email, "E-mail" %>
  <%=f.text_field :email %>

  <%=f.label :password, "Password" %>
  <%=f.password_field :password %>

  <%=f.label :password_confirm, "Confirm password" %>
  <%=f.password_field :password_confirm %>

  <%= f.submit "Sign up" %>
<% end %>

<%= form_for @user, :url => users_login_path do |f| %>
  <%=f.label :name, "User name" %>
  <%=f.text_field :name %>

  <%=f.label :password, "Password" %>
  <%=f.password_field :password %>

  <%= f.submit "Log in" %>
<% end %>
